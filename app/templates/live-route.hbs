<LeafletMap 
  @zoom={{18}} 
  @dragging={{false}}
  @zoomControl={{false}}
  @lat={{@model.location.lat}} 
  @lng={{@model.location.lng}} 
as |layers|>
  <GoogleMutantLayer @type="roadmap" />
  <layers.marker 
    @lat={{@model.location.lat}} 
    @lng={{@model.location.lng}} 
  />
</LeafletMap>

<NotificationPane 
  @delivery={{@model}} 
/>